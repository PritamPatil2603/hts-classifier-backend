{
  "name": "hts-classifier-backend",
  "version": "1.0.0",
  "description": "Backend API for HTS product classification with production optimizations",
  "main": "src/app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/app.js",
    "dev": "cross-env NODE_ENV=development nodemon src/app.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "health": "curl -f http://localhost:3001/health || echo Health check failed",
    "metrics": "curl -s http://localhost:3001/api/metrics || echo Metrics unavailable"
  },
  "keywords": [
    "hts",
    "classification",
    "openai",
    "nodejs",
    "mongodb",
    "ai-agent",
    "production-ready"
  ],
  "author": "Your Name <your.email@domain.com>",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "helmet": "^7.1.0",
    "mongodb": "^6.8.0",
    "morgan": "^1.10.0",
    "openai": "^4.57.0",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules",
      "*.test.js"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
